<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence" version="2.1">
    <persistence-unit name="myPU">
        <class>org.example.models.supermercado.Cliente</class>
        <class>org.example.models.supermercado.Producto</class>
        <class>org.example.models.supermercado.Marca</class>
        <class>org.example.models.supermercado.CategoriaProducto</class>
        <class>org.example.models.supermercado.Venta</class>
        <class>org.example.models.supermercado.DetalleVenta</class>
        <class>org.example.models.empresa.Empleado</class>
        <class>org.example.models.empresa.Proyecto</class>
        <class>org.example.models.empresa.Departamento</class>
        <class>org.example.models.empresa.Cuenta</class>
        <class>org.example.models.universidad.Profesor</class>
        <class>org.example.models.universidad.Estudiante</class>
        <class>org.example.models.universidad.Curso</class>
        <class>org.example.models.universidad.DetalleCurso</class>
        <class>org.example.models.universidad.Nota</class>

        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/ejercicios_nodo"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres"/>
            <property name="jakarta.persistence.jdbc.password" value="postgresql"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
            <property name="hibernate.hbm2ddl.auto" value="create"/>
            <property name="hibernate.show_sql" value="false"/>
            <property name="hibernate.format_sql" value="false"/>
        </properties>
    </persistence-unit>
</persistence>